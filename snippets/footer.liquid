{% if template == 'collection' %}

    <footer style="background: var(--green); border-top: 1px solid var(--black);">
    {% assign logo_src = 'logo.svg' %}

{% elsif page.handle == 'about-us' %}

    <footer style="background: var(--green); border-top: 1px solid var(--black);">
    {% assign logo_src = 'logo.svg' %}

{% elsif template == 'product' %}

    <footer style="background: var(--orange); border-top: 1px solid #000;">
    <style> footer { --black: #fff!important; }</style>
    {% assign logo_src = 'logo-white.svg' %}

{% elsif template == 'blog' %}

    <footer style="background: var(--orange); border-top: 1px solid #000;">
    <style> footer { --black: #fff!important; }</style>
    {% assign logo_src = 'logo-white.svg' %}

{% elsif template == 'article' %}

    <footer style="background: var(--orange); border-top: 1px solid #000;">
    <style> footer { --black: #fff!important; }</style>
    {% assign logo_src = 'logo-white.svg' %}

{% elsif template == 'cart' %}

    <footer style="background: var(--orange);">
    <style> footer { --black: #fff!important; }</style>
    {% assign logo_src = 'logo-white.svg' %}

{% else %}

    <footer style="background: var(--green);">
    {% assign logo_src = 'logo.svg' %}

{% endif %}

    <div class="row">

    {% comment %}}
    *
    * Left
    *
    {% endcomment %}
    <div class="left">
        <div class="logo">
            <a href="{{ routes.root_url }}" title="Wald">
                <img src="{{ logo_src | asset_url }}" alt="{{ shop.name }}" />
            </a>
        </div>
        <div class="description">
            <p>WALD creates one-of-a-kind wares, designed and produced in collaboration with artisans from around the world through a sustainable and ethical process.</p>
        </div>     
    </div>

    {% comment %}
    *
    * Center
    *
    {% endcomment %}
    <div class="center">
        <span class="title-desktop large">Newsletter</span>
        <a href="#" class="instagram-mobile" title="Instagram">Find us on Instagram</a>
        <div class="email">
            {% form 'customer' %}
                <input id="contact_tags" name="contact[tags]" type="hidden" value="prospect,newsletter" />

                <input id="contact_email" name="contact[email]" type="text" placeholder="Email" />
                <input class="submit" type="submit" value="Sign Up" />
            {% endform %}
        </div>

        <a href="#" class="instagram-desktop" title="Instagram">Find us on Instagram</a>
    </div>

    {% comment %}}
    *
    * Right
    *
    {% endcomment %}
    <div class="right">

        <span class="large">Quick Links</span>
        
        <div class="quick-links">
            <div class="l">
            <ul>
                {% for link in linklists.quick-links-left.links %}
                {% assign has_sub_menu = false %}
                {% assign has_sub_categories = false %}
                {% assign parent_link_active = false %}
                {% assign child_list_handle = link.title | handle %}
                {% if linklists[child_list_handle] and linklists[child_list_handle].links.size > 0 %}
                {% assign has_sub_menu = true %}
                {% for l in linklists[child_list_handle].links %}
                    {% if handle != blank and handle == l.object.handle %}
                    {% assign parent_link_active = true %}
                    {% elsif page_title == l.title %}
                    {% assign parent_link_active = true %}
                    {% endif %}
                {% endfor %}
                {% elsif link.type == 'collection_link' and link.object.all_tags.size > 0 %}
                {% assign has_sub_categories = true %}
                {% endif %}
                <li class="{% if link.active or parent_link_active %} active{% endif %}{% if has_sub_menu or has_sub_categories %} has-dropdown{% endif %}{% if forloop.first %} first{% elsif forloop.last %} last{% endif %}">
                <a href="{{ link.url }}">{{ link.title }}{% if has_sub_menu or has_sub_categories %} <i class="fa fa-angle-down"></i>{% endif %}</a> 
                {% if has_sub_menu or has_sub_categories %}
                <ul>
                    {% if has_sub_menu %}
                    {% for l in linklists[child_list_handle].links %}
                    <li class="{% if l.active %} active{% endif %}">
                        <a href="{{ l.url }}">{{ l.title }}</a>
                    </li>
                    {% endfor %}
                    {% elsif has_sub_categories %}
                    {% for tag in link.object.all_tags %}
                    <li class="{% if current_tags contains tag %} active{% endif %}">
                        <a href="{{ link.url }}/{{ tag | handle }}">{{ tag }}</a>
                    </li>
                    {% endfor %}
                    {% endif %}
                </ul>
                {% endif %}
                </li>
                {% endfor %}
            </ul>
            </div>
            <div class="r">
            <ul>
                {% for link in linklists.quick-links-right.links %}
                {% assign has_sub_menu = false %}
                {% assign has_sub_categories = false %}
                {% assign parent_link_active = false %}
                {% assign child_list_handle = link.title | handle %}
                {% if linklists[child_list_handle] and linklists[child_list_handle].links.size > 0 %}
                {% assign has_sub_menu = true %}
                {% for l in linklists[child_list_handle].links %}
                    {% if handle != blank and handle == l.object.handle %}
                    {% assign parent_link_active = true %}
                    {% elsif page_title == l.title %}
                    {% assign parent_link_active = true %}
                    {% endif %}
                {% endfor %}
                {% elsif link.type == 'collection_link' and link.object.all_tags.size > 0 %}
                {% assign has_sub_categories = true %}
                {% endif %}
                <li class="{% if link.active or parent_link_active %} active{% endif %}{% if has_sub_menu or has_sub_categories %} has-dropdown{% endif %}{% if forloop.first %} first{% elsif forloop.last %} last{% endif %}">
                <a href="{{ link.url }}">{{ link.title }}{% if has_sub_menu or has_sub_categories %} <i class="fa fa-angle-down"></i>{% endif %}</a> 
                {% if has_sub_menu or has_sub_categories %}
                <ul>
                    {% if has_sub_menu %}
                    {% for l in linklists[child_list_handle].links %}
                    <li class="{% if l.active %} active{% endif %}">
                        <a href="{{ l.url }}">{{ l.title }}</a>
                    </li>
                    {% endfor %}
                    {% elsif has_sub_categories %}
                    {% for tag in link.object.all_tags %}
                    <li class="{% if current_tags contains tag %} active{% endif %}">
                        <a href="{{ link.url }}/{{ tag | handle }}">{{ tag }}</a>
                    </li>
                    {% endfor %}
                    {% endif %}
                </ul>
                {% endif %}
                </li>
                {% endfor %}
            </ul>
            </div>
        </div>
        </div>

    </div>
    <p class="copyright">&copy; 2022 WALD. All Rights Reserved.</p>
</footer>