<style>
    /* Footer */
    footer {
        padding: 20px 40px;
        color: var(--black);
    }
    footer a,
    footer button {
        color: var(--black);
    }
    footer .row {
        display: grid;
        grid-template-columns: 1fr 1fr 1fr;
        align-items: stretch;
    }
    footer .row .left {
        position: relative;
    }
    footer .row .left img {
        width: 200px;
    }
    footer .row .center {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        align-items: space-between;
        text-align: center;
    }
    footer .row .center .email {
        display: flex;
        flex-direction: column;
        align-items: center;
    }
    footer span.large {
        font-family: var(--serif-font);
        font-size: 2.4rem;
        margin: 0 0 14px 0;
    }
    footer .row .center .email input {
        background: transparent; 
        border-top: 0;
        border-right: 0;
        border-bottom: 1px solid var(--black);
        border-left: 0;
        margin: 0 0 14px 0;
        text-align: center;
        padding: 0 0 4px 0;
    }
    footer .row .center .email input::placeholder {
        color: var(--black);
        text-transform: uppercase;
    }
    footer .row .center .email button {
        background: transparent;
        border: 1px solid var(--black);
        padding: 6px;
        text-transform: uppercase;
    }
    footer .row .center a {
        text-transform: uppercase;
        margin: 30px 0 0 0;
    }
    footer .row .right {
        display: grid;
        grid-template-rows: 1fr 2fr;
        align-items: stretch;
        justify-content: center;
        position: relative;
    }
    footer .row .right .quick-links {
        display: grid;
        grid-template-columns: 1fr 1fr;
        align-items: stretch;
        position: relative;
    }
    footer .row .right .quick-links ul {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        position: absolute;
        top: 0;
        right: 0;
        bottom: 0;
        left: 0;
    }
    footer .row .quick-links .right ul {
        padding: 0 0 0 40px;
    }
    a.instagram-desktop {
        display: block;
    }
    a.instagram-mobile {
        display: none;
        text-align: left;
    }

    /* ======================= MEDIA QUERIES */
    
    /* Large devices */
    @media (max-width: 1199.98px) { }
    
    /* Medium devices */
    @media (max-width: 991.98px) { }

    /* Landscape devices */
    @media (max-width: 767.98px) {
        footer {
            padding: 40px;
            color: var(--black);
            border-top: 1px solid #000;
        }
        footer .row {
            display: flex;
            flex-wrap: wrap-reverse;
            align-items: stretch;
        }
        footer .row > div {
            width: 100%;
        }
        footer .row .center {
            margin: 0 0 20px 0;
        }
        footer .row .center .email {
            align-items: flex-start;
            margin: 30px 0 0 0;
            width: 100%;
        }
        footer .row .center .email input {
            width: 100%;
            text-align: left;
        }
        footer .row .right {
            width: 100%;
            justify-content: flex-start;
            margin: 0 0 20px 0;
        }
        footer .row .right .quick-links {
            justify-content: flex-start;
            grid-template-columns: 1fr 1fr;
            width: 100%;
        }
        a.instagram-mobile {
            display: block;
        }
        footer .center span.title-desktop,
        a.instagram-desktop {
            display: none;
        }
    }

  /* iPhones */
  @media (max-width: 575.98px) { }
</style>

{% if template == 'product' %}

    <footer style="background: var(--orange);">
    <style> footer { --black: #fff!important; }</style>
    {% assign logo_src = 'logo-white.svg' %}

{% elsif template == 'blog' %}

    <footer style="background: var(--orange);">
    <style> footer { --black: #fff!important; }</style>
    {% assign logo_src = 'logo-white.svg' %}

{% elsif template == 'article' %}

    <footer style="background: var(--orange);">
    <style> footer { --black: #fff!important; }</style>
    {% assign logo_src = 'logo-white.svg' %}

{% elsif template == 'cart' %}

    <footer style="background: var(--orange);">
    <style> footer { --black: #fff!important; }</style>
    {% assign logo_src = 'logo-white.svg' %}

{% else %}

    <footer style="background: var(--green);">
    {% assign logo_src = 'logo.svg' %}

{% endif %}

    <div class="row">

    {% comment %}} Left {% endcomment %}
    <div class="left">
        <div class="logo">
            <a href="{{ routes.root_url }}" title="Wald">
                <img src="{{ logo_src | asset_url }}" alt="{{ shop.name }}" />
            </a>
        </div>
        <div class="description">
            <p>WALD creates one-of-a-kind wares, designed and produced in collaboration with artisans from around the world through a sustainable and ethical process.</p>
        </div>     
    </div>

    {% comment %} Center {% endcomment %}
    <div class="center">
        <span class="title-desktop large">Newsletter</span>
        <a href="#" class="instagram-mobile" title="Instagram">Find us on Instagram</a>
        <div class="email">
            {% comment %} Replace with MailChimp {% endcomment %}
            <input type="email" name="email" placeholder="Email" />
            <button type="submit">Sign up</button>
        </div>

        <a href="#" class="instagram-desktop" title="Instagram">Find us on Instagram</a>
    </div>

    {% comment %}} Right {% endcomment %}
    <div class="right">
        <span class="large">Quick Links</span>
        <div class="quick-links">
            <div class="left">
            <ul>
                {% for link in linklists.quick-links-left.links %}
                {% assign has_sub_menu = false %}
                {% assign has_sub_categories = false %}
                {% assign parent_link_active = false %}
                {% assign child_list_handle = link.title | handle %}
                {% if linklists[child_list_handle] and linklists[child_list_handle].links.size > 0 %}
                {% assign has_sub_menu = true %}
                {% for l in linklists[child_list_handle].links %}
                    {% if handle != blank and handle == l.object.handle %}
                    {% assign parent_link_active = true %}
                    {% elsif page_title == l.title %}
                    {% assign parent_link_active = true %}
                    {% endif %}
                {% endfor %}
                {% elsif link.type == 'collection_link' and link.object.all_tags.size > 0 %}
                {% assign has_sub_categories = true %}
                {% endif %}
                <li class="{% if link.active or parent_link_active %} active{% endif %}{% if has_sub_menu or has_sub_categories %} has-dropdown{% endif %}{% if forloop.first %} first{% elsif forloop.last %} last{% endif %}">
                <a href="{{ link.url }}">{{ link.title }}{% if has_sub_menu or has_sub_categories %} <i class="fa fa-angle-down"></i>{% endif %}</a> 
                {% if has_sub_menu or has_sub_categories %}
                <ul>
                    {% if has_sub_menu %}
                    {% for l in linklists[child_list_handle].links %}
                    <li class="{% if l.active %} active{% endif %}">
                        <a href="{{ l.url }}">{{ l.title }}</a>
                    </li>
                    {% endfor %}
                    {% elsif has_sub_categories %}
                    {% for tag in link.object.all_tags %}
                    <li class="{% if current_tags contains tag %} active{% endif %}">
                        <a href="{{ link.url }}/{{ tag | handle }}">{{ tag }}</a>
                    </li>
                    {% endfor %}
                    {% endif %}
                </ul>
                {% endif %}
                </li>
                {% endfor %}
            </ul>
            </div>
            <div class="right">
            <ul>
                {% for link in linklists.quick-links-right.links %}
                {% assign has_sub_menu = false %}
                {% assign has_sub_categories = false %}
                {% assign parent_link_active = false %}
                {% assign child_list_handle = link.title | handle %}
                {% if linklists[child_list_handle] and linklists[child_list_handle].links.size > 0 %}
                {% assign has_sub_menu = true %}
                {% for l in linklists[child_list_handle].links %}
                    {% if handle != blank and handle == l.object.handle %}
                    {% assign parent_link_active = true %}
                    {% elsif page_title == l.title %}
                    {% assign parent_link_active = true %}
                    {% endif %}
                {% endfor %}
                {% elsif link.type == 'collection_link' and link.object.all_tags.size > 0 %}
                {% assign has_sub_categories = true %}
                {% endif %}
                <li class="{% if link.active or parent_link_active %} active{% endif %}{% if has_sub_menu or has_sub_categories %} has-dropdown{% endif %}{% if forloop.first %} first{% elsif forloop.last %} last{% endif %}">
                <a href="{{ link.url }}">{{ link.title }}{% if has_sub_menu or has_sub_categories %} <i class="fa fa-angle-down"></i>{% endif %}</a> 
                {% if has_sub_menu or has_sub_categories %}
                <ul>
                    {% if has_sub_menu %}
                    {% for l in linklists[child_list_handle].links %}
                    <li class="{% if l.active %} active{% endif %}">
                        <a href="{{ l.url }}">{{ l.title }}</a>
                    </li>
                    {% endfor %}
                    {% elsif has_sub_categories %}
                    {% for tag in link.object.all_tags %}
                    <li class="{% if current_tags contains tag %} active{% endif %}">
                        <a href="{{ link.url }}/{{ tag | handle }}">{{ tag }}</a>
                    </li>
                    {% endfor %}
                    {% endif %}
                </ul>
                {% endif %}
                </li>
                {% endfor %}
            </ul>
            </div>
        </div>
        </div>

    </div>
    <p class="copyright">&copy; 2022 WALD. All Rights Reserved.</p>
</footer>