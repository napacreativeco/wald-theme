<style>

  /* Home Products */
  section.home-products {
    background: var(--green);
    text-align: center;
    border-bottom: 1px solid var(--black);
    position: relative;
    z-index: 9;
    padding: 1px;
  }
  section.home-products h2 {
    font-size: 3rem;
  }
  section.home-products .product-list {
    background: var(--white);
    width: 100%;
    padding: 10px 0;
  }
  /* Home Products: List */
  section.home-products .product-list ul {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr 1fr;
    grid-gap: 20px;
    padding: 20px 40px;
  }
  section.home-products .product-list li {
    padding: 1px;
  }
  section.home-products .product-list li img {
    width: 100%;
  }
  section.home-products .product-list li .info {
    display: grid;
    grid-template-columns: 3fr 1fr;
    align-items: flex-start;
  }
  section.home-products .product-list li p {
    margin: 0;
    padding: 0;
    text-align: left;
  }
  section.home-products .product-list li .price {
    text-align: right;
  }
  section.home-products .product-list li .price span {
    font-family: var(--serif-font);
  }

  /* Home Products: View all */
  section.home-products .view-all {
    text-align: center;
    padding: 0 0 10px 0;
  }
  section.home-products .view-all a {
    font-size: 3rem;
  }
  section.home-products .view-all h3 {
    margin: 0;
    padding: 0;
  }
</style>

{% section 'hero-section' %}

<section class="home-products">
  <div class="row">
  
    <div style="padding: 1px;">
      <h2 class="fade_up">New Arrivals</h2>
    </div>

    <div class="product-list">

      <ul>
        {% for product in collections.new-arrivals.products %}

          <li>
            <a href="{{ product.url }}" title="{{ product.title }}">
              <img src="{{ product.featured_image | img_url: "medium" }}" alt={{ product.title }}>
            </a>

            <div class="info">

              <div class="title">
                <a href="{{ product.url }}" title="{{ product.title }}">
                  <p>{{ product.title }}</p>
                </a>
              </div>

              <div class="price">
                <a href="{{ product.url }}" title="{{ product.title }}">
                  <span>{{ product.price |  money_without_trailing_zeros }}</span>
                </a>
              </div>

            </div>
          </li>

        {% endfor %}
      </ul>
    </div>

    <div class="view-all">
      <a href="{{ shop.url }}/collections/all" title="View all products">
        <h3>View all products</h3>
      </a>
    </div>
  </div>

  {{ page.content }}

</section>