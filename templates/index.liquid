{% comment %}
  Very important reading:
  http://docs.shopify.com/themes/liquid-basics/what-is-true-and-false-in-liquid
  Learn how to read theme settings in your theme.
{% endcomment %}

<style>

  .slide .row {
    height: 100vh;
  }
  /* Hero */
  section.hero {
    position: fixed;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    z-index: -1;
    width: 100%;
  }
  section.hero .row {
      display: grid;
      grid-template-columns: 50% 50%;
      align-items: stretch;
      max-width: 100%;
  }
  section.hero .left {
    background: url("{{ settings.hero_image_one | img_url: '720x720', scale: 2 }}");
    background-size: cover;
    background-position: center center;
  }
  section.hero .right {
      display: flex;
      align-items: center;
      background: var(--green);
      padding: 0px 80px;
  }
  section.hero h1,
  section.subhero h1 {
    font-size: 4rem;
  }
  /* Slide One */
  .hero .slide.one {
    overflow: hidden;
  }
  .hero .slide.one img {
    object-fit: cover;
    object-position: center center;
  }
  /* Sub-Hero */
  section.subhero {
    margin-top: 100vh;
    background: var(--white);
  }
  section.subhero .row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    align-items: stretch;
  }
  section.subhero .left {
      display: flex;
      align-items: center;
      background: var(--orange);
      padding: 20px 80px;
  }
  section.subhero .right {
    background: url("{{ settings.hero_image_two | img_url: '720x720', scale: 2 }}");
    background-size: cover;
    background-position: center center;
  }

  /* Home Products */
  section.home-products {
    background: var(--green);
    text-align: center;
    border-bottom: 1px solid var(--black);
    position: relative;
    z-index: 9;
    padding: 1px;
  }
  section.home-products h2 {
    font-size: 3rem;
  }
  section.home-products .product-list {
    background: var(--white);
    width: 100%;
    padding: 10px 0;
  }
  /* Home Products: List */
  section.home-products .product-list ul {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr 1fr;
    grid-gap: 20px;
    padding: 20px 40px;
  }
  section.home-products .product-list li {
    padding: 1px;
  }
  section.home-products .product-list li img {
    width: 100%;
  }
  section.home-products .product-list li .info {
    display: grid;
    grid-template-columns: 3fr 1fr;
    align-items: flex-start;
  }
  section.home-products .product-list li p {
    margin: 0;
    padding: 0;
    text-align: left;
  }
  section.home-products .product-list li .price {
    text-align: right;
  }
  section.home-products .product-list li .price span {
    font-family: var(--serif-font);
  }

  /* Home Products: View all */
  section.home-products .view-all {
    text-align: center;
    padding: 0 0 10px 0;
  }
  section.home-products .view-all a {
    font-size: 3rem;
  }
  section.home-products .view-all h3 {
    margin: 0;
    padding: 0;
  }
</style>

<section class="hero slide one">
  <div class="row">
      {% comment %} Left {% endcomment %}
      {% assign image_size = "1000px" %}
      <div class="left">
        &nbsp;
      </div>

      {% comment %} Right {% endcomment %}
      <div class="right">
          <h1 class="fade_up">Clothing,<br /> based on <em>joy</em></h1>
      </div>
  </div>
</section>

<section class="subhero slide two">
  <div class="row">
    {% comment %} Left {% endcomment %}
    <div class="left">
      <h1 class="fade_up">Clothing,<br /> based on <em>joy</em></h1>
    </div>

    {% comment %} Right {% endcomment %}
    <div class="right">
        &nbsp;
    </div>
  </div> 
</section>

<section class="home-products">
  <div class="row">
  
    <div style="padding: 1px;">
      <h2 class="fade_up">New Arrivals</h2>
    </div>

    <div class="product-list">

      <ul>
        {% for product in collections.new-arrivals.products %}

          <li>
            <a href="{{ product.url }}" title="{{ product.title }}">
              <img src="{{ product.featured_image | img_url: "medium" }}" alt={{ product.title }}>
            </a>

            <div class="info">

              <div class="title">
                <a href="{{ product.url }}" title="{{ product.title }}">
                  <p>{{ product.title }}</p>
                </a>
              </div>

              <div class="price">
                <a href="{{ product.url }}" title="{{ product.title }}">
                  <span>{{ product.price |  money_without_trailing_zeros }}</span>
                </a>
              </div>

            </div>
          </li>

        {% endfor %}
      </ul>
    </div>

    <div class="view-all">
      <a href="{{ shop.url }}/collections/all" title="View all products">
        <h3>View all products</h3>
      </a>
    </div>
  </div>

  {{ page.content }}

</section>