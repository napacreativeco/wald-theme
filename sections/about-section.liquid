-- This SECTION is being called by the page.example.json template. The settings inside the Schema tag are found in the Customizer

{% endcomment %}

<style>
    .about {
        background: url("{{ section.settings.about_background_image | img_url: '720x720', scale: 2 }}");
        background-size: cover;
        background-position: center center;
    }
    .about .row {
        display: grid;
        grid-template-columns: 1fr 1fr;
        align-items: center;
        height: 100vh;
    }
    .about .content {
        padding: 10px;
    }
    .about h1 {
        font-size: 3rem;
    }
    .about p {
        max-width: 500px;
    }
</style>



<section class="about">

    <div class="row">
        <div class="spacer">
            &nbsp;
        </div>
        <div class="content">
            <h1 class="fade_up">{{ page.title }}</h1>
            <p class="fade_in_delay">{{ page.content }}</p>
        </div>

    </div>

</section>

{% schema %}
  {
    "name": "About us",
    "settings": [
      {
        "type": "image_picker",
        "id": "about_background_image",
        "label": "Background Image"
      }
    ]
  }
{% endschema %}

